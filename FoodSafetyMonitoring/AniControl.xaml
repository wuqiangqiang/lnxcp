<UserControl x:Class="FoodSafetyMonitoring.AniControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Name="MoveUserControl" Background="Transparent" >
    <Canvas Name="canvas" Background="Transparent">
        <DockPanel Canvas.Left="0" Canvas.Bottom="5" Name="dockPanel" Background="Transparent">
            <DockPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </DockPanel.RenderTransform>
        </DockPanel>
    </Canvas>
</UserControl>
